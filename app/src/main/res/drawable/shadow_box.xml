<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Sudut melengkung -->
            <solid android:color="#FFFFFF" /> <!-- Warna isi kotak -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="4dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#40000000" /> <!-- Warna shadow semi-transparan -->
        </shape>
    </item>
</layer-list>
